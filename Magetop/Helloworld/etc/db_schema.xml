<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magetop_blog">
        <column xsi:type="int" name="id" padding="10" unsigned="true" identity="true" nullable="false" comment="Id"/>
        <column xsi:type="text" name="title" nullable="false" comment="Blog Title"/>
        <column xsi:type="text" name="description" comment="Blog Description"/>
        <column xsi:type="int" name="status" padding="10" comment="Blog Status"/>
        <column xsi:type="text" name="image" comment="Blog Image"/>
        <column xsi:type="timestamp" name="created_at"  comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at"  comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
